<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/buttons_round_corners</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:layout_width">185.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="versionText">
        <item name="android:textSize">@dimen/subtitleTextSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
